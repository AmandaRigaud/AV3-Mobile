<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10sp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@id/weathercode_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="0.5sp"
                android:fontFamily="monospace"
                android:textAlignment="center"
                android:text="Nublado"
                android:layout_marginTop="5sp"
                android:textAppearance="?android:textAppearanceLarge"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/temperature_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:elevation="0.5sp"
                android:text="26"
                android:fontFamily="monospace"
                android:layout_marginBottom="2sp"
                android:textAppearance="?android:textAppearanceLarge"
                android:textSize="120sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerHorizontal="true">

                <RelativeLayout
                    android:id="@+id/relaitveMinG"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@id/min_temp_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:elevation="0.5sp"
                        android:fontFamily="monospace"
                        android:text="24"
                        android:textAlignment="textEnd"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/gc_text_view_td"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@id/min_temp_text_view"
                        android:elevation="0.5sp"
                        android:fontFamily="monospace"
                        android:text="ºC"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:textSize="19sp" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/barra_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6sp"
                    android:layout_marginRight="8sp"
                    android:layout_toEndOf="@+id/relaitveMinG"
                    android:elevation="0.5sp"
                    android:fontFamily="monospace"
                    android:text="-"
                    android:textAlignment="center"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textSize="30sp" />

                <RelativeLayout
                    android:id="@+id/relaitveMaxG"
                    android:layout_toEndOf="@+id/barra_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/max_temp_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="0.5sp"
                        android:fontFamily="monospace"
                        android:text="30"
                        android:textAlignment="textStart"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/gc_text_two_td"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@id/max_temp_text_view"
                        android:elevation="0.5sp"
                        android:fontFamily="monospace"
                        android:text="ºC"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:textSize="19sp" />

                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/sunrise_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2sp"
                        android:elevation="0.5sp"
                        android:text="Nascer do sol:"
                        android:fontFamily="monospace"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/sunrise_time_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="0.5sp"
                        android:fontFamily="monospace"
                        android:text="05:00H"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:textSize="25sp" />

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0.5dp"
                    android:layout_weight="0.5" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/sunset_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="0.5sp"
                        android:layout_marginBottom="2sp"
                        android:text="Pôr do sol:"
                        android:fontFamily="monospace"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/sunset_time_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="0.5sp"
                        android:fontFamily="monospace"
                        android:text="17:42H"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:textSize="25sp" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/temperature_day_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:elevation="0.5sp"
                android:fontFamily="monospace"
                android:text="Temperatura 24H:"
                android:textAppearance="?android:textAppearanceLarge"
                android:textSize="25sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/temperature_day_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="horizontal"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/temperature_week_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="0.5sp"
                android:fontFamily="monospace"
                android:layout_marginTop="20sp"
                android:text="Temperaturas na semana:"
                android:textAppearance="?android:textAppearanceLarge"
                android:textSize="25sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/temperature_week_rv"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:scrollbars="horizontal"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>